---
const { tags } = Astro.props;
---

<div class="tags">
  {
    tags.map((tag: string, index: number) => (
      <span class="tag">
        {tag}
        {index !== tags.length - 1 && <span class="separator">â€¢</span>}
      </span>
    ))
  }
</div>

<style>
  .tags {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .tag {
    color: var(--color-secondary);
    font-size: 0.9rem;
    display: inline-flex;
    align-items: center;
  }

  .separator {
    margin-left: 0.5rem;
    opacity: 0.75;
  }
</style>
